rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ⚠️ WARNING: These rules allow public read/write access for development/testing
    // For production, restore the secure rules with admin checks
    
    // Movies collection - public access for testing
    match /movies/{movieId} {
      allow read, write: if true;
    }
    
    // Showtimes collection - public access for testing
    match /showtimes/{showtimeId} {
      allow read, write: if true;
    }
    
    // Events collection - public access for testing
    match /events/{eventId} {
      allow read, write: if true;
    }
    
    // Bookings collection - public access for testing
    match /bookings/{bookingId} {
      allow read, write: if true;
    }
    
    // Users collection - public access for testing
    match /users/{userId} {
      allow read, write: if true;
    }
  }
}
